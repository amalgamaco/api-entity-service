{
  "name": "@amalgama/api-entity-service",
  "version": "1.0.0",
  "description": "A set of services for handling the communication with a REST API and the creation of the local entities and their relations based on the API responses.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/ tests/",
    "test": "NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=reports TZ=UTC jest"
  },
  "repository": {
    "type": "git",
    "url": "git@git.amalgama.co:amalgama/packages/npm/api-entity-service.git"
  },
  "author": "Mauro E. Bender <mauro@amalgama.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://git.amalgama.co/amalgama/packages/npm/api-entity-service/-/issues"
  },
  "homepage": "https://git.amalgama.co/amalgama/packages/npm/api-entity-service",
  "publishConfig": {
    "@amalgama:registry": " https://git.amalgama.co/api/v4/projects/982/packages/npm/"
  },
  "keywords": [
    "api",
    "entity service"
  ],
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/reports/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html",
      "text-summary",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "<rootDir>/config/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/?(*.)(spec|test).js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "preset": "ts-jest"
  }
}
